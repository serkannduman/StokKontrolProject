
@{
    ViewData["Title"] = "AddCategory";
}
@model Category

<h1>AddCategory</h1>

<div class="animated fadeIn">


    <div class="row">
        <div class="offset-3 col-lg-6">
            <div class="card">
                <div class="card-header text-center">
                    <strong class="card-title">Kategori Ekle</strong>
                </div>
                <div class="card-body">
                    <!-- Credit Card -->
                    <div id="pay-invoice">
                        <div class="card-body">
                            
                            <hr>
                            <form asp-area="Admin" asp-controller="Category" asp-action="AddCategory" method="post" novalidate="novalidate">
                                
                                <div class="form-group">
                                    <label asp-for="CategoryName" class="control-label mb-1">Kategori Adı</label>
                                    <input asp-for="CategoryName"  data-val-required="Lütfen kategori adı giriniz" type="text" class="form-control" aria-required="true" aria-invalid="false" value="">
                                    <span class="text-danger" asp-validation-for="CategoryName"></span>
                                </div>
                                <div class="form-group has-success">
                                    <label asp-for="Description" class="control-label mb-1">Açıklama</label>
                                    <input asp-for="Description"  type="text" class="form-control cc-name valid" data-val="true" data-val-required="Lütfen kategori Açıklaması giriniz"  aria-required="true" aria-invalid="false" >
                                    <span class="text-danger" asp-validation-for="Description"></span>
                                    <span class="help-block field-validation-valid" data-valmsg-for="cc-name" data-valmsg-replace="true"></span>
                                </div>
                                
                                
                                <div>
                                    <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                        <i class="fa fa-plus fa-lg"></i>&nbsp;
                                        <span id="payment-button-amount">Kategori Ekle</span>
                                        <span id="payment-button-sending" style="display:none;">Ekleniyor..</span>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div> <!-- .card -->

        </div><!--/.col-->

       

    </div>


</div><!-- .animated -->

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

