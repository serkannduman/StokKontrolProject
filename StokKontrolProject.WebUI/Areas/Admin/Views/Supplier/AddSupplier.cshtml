
@{
    ViewData["Title"] = "AddSupplier";
}
@model Supplier

<h1>AddCategory</h1>

<div class="animated fadeIn">


    <div class="row">
        <div class="offset-3 col-lg-6">
            <div class="card">
                <div class="card-header text-center">
                    <strong class="card-title">Tedarikçi Ekle</strong>
                </div>
                <div class="card-body">
                    <!-- Credit Card -->
                    <div id="pay-invoice">
                        <div class="card-body">
                            
                            <hr>
                            <form asp-area="Admin" asp-controller="Supplier" asp-action="AddSupplier" method="post" novalidate="novalidate">
                                
                                <div class="form-group">
                                    <label asp-for="SupplierName" class="control-label mb-1">Tedarikci Adı</label>
                                    <input asp-for="SupplierName" data-val-required="Lütfen Tedarikci adı giriniz" type="text" class="form-control" aria-required="true" aria-invalid="false" value="">
                                    <span class="text-danger" asp-validation-for="SupplierName"></span>
                                </div>
                                <div class="form-group has-success">
                                    <label asp-for="Address" class="control-label mb-1">Adres</label>
                                    <input asp-for="Address" type="text" class="form-control cc-name valid" data-val="true" data-val-required="Lütfen adres giriniz" aria-required="true" aria-invalid="false">
                                    <span class="text-danger" asp-validation-for="Address"></span>
                                    <span class="help-block field-validation-valid" data-valmsg-for="cc-name" data-valmsg-replace="true"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Phone" class="control-label mb-1">Telefon no</label>
                                    <input asp-for="Phone" data-val-required="Lütfen telefon numarası giriniz" type="text" class="form-control" aria-required="true" aria-invalid="false" value="">
                                    <span class="text-danger" asp-validation-for="Phone"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email" class="control-label mb-1">Email</label>
                                    <input asp-for="Email" data-val-required="Lütfen email adresinizi giriniz" type="text" class="form-control" aria-required="true" aria-invalid="false" value="">
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                                
                                
                                
                                <div>
                                    <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                        <i class="fa fa-plus fa-lg"></i>&nbsp;
                                        <span id="payment-button-amount">Tedarikçi Ekle</span>
                                        <span id="payment-button-sending" style="display:none;">Ekleniyor..</span>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div> <!-- .card -->

        </div><!--/.col-->

       

    </div>


</div><!-- .animated -->

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

