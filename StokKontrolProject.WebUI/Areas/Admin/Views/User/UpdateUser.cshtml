
@{
    ViewData["Title"] = "UpdateCategory";
}

@model User

<h1>AddCategory</h1>

<div class="animated fadeIn">


    <div class="row">
        <div class="offset-3 col-lg-6">
            <div class="card">
                <div class="card-header text-center">
                    <strong class="card-title">Kullanıcı Güncelle</strong>
                </div>
                <div class="card-body">
                    <!-- Credit Card -->
                    <div id="pay-invoice">
                        <div class="card-body">

                            <hr>
                            <form asp-area="Admin" asp-controller="User" asp-action="UpdateUser" method="post" novalidate="novalidate" enctype="multipart/form-data">

                                <div class="form-group">
                                    <label asp-for="PhotoURL" class="control-label mb-1">Kullanıcı Fotoğrafı</label>
                                    <input asp-for="PhotoURL" data-val-required="Lütfen Kullanıcı fotoğrafı seçiniz" type="file" name="files" class="form-control" aria-required="true" aria-invalid="false" >
                                    <span class="text-danger" asp-validation-for="PhotoURL"></span>
                                </div>

                                <img />

                                <div class="form-group">
                                    <label asp-for="FirstName" class="control-label mb-1">Adı</label>
                                    <input asp-for="FirstName" data-val-required="Lütfen Kullanıcı adı giriniz" type="text" class="form-control" aria-required="true" aria-invalid="false" >
                                    <span class="text-danger" asp-validation-for="FirstName"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="LastName" class="control-label mb-1">Soyadı</label>
                                    <input asp-for="LastName" data-val-required="Lütfen Kullanıcı soyadı giriniz" type="text" class="form-control" aria-required="true" aria-invalid="false" >
                                    <span class="text-danger" asp-validation-for="LastName"></span>
                                </div>
                                <div class="form-group has-success">
                                    <label asp-for="Address" class="control-label mb-1">Adres</label>
                                    <input asp-for="Address" type="text" class="form-control cc-name valid" data-val="true" data-val-required="Lütfen adres giriniz" aria-required="true" aria-invalid="false">
                                    <span class="text-danger" asp-validation-for="Address"></span>
                                    <span class="help-block field-validation-valid" data-valmsg-for="cc-name" data-valmsg-replace="true"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Phone" class="control-label mb-1">Telefon no</label>
                                    <input asp-for="Phone" data-val-required="Lütfen telefon numarası giriniz" type="text" class="form-control" aria-required="true" aria-invalid="false" >
                                    <span class="text-danger" asp-validation-for="Phone"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email" class="control-label mb-1">Email</label>
                                    <input asp-for="Email" data-val-required="Lütfen email adresinizi giriniz" type="text" class="form-control" aria-required="true" aria-invalid="false" >
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Role" class="control-label mb-1">Rolü</label>
                                    <select asp-for="Role" asp-items="@Html.GetEnumSelectList(typeof(UserRole))" class="form-control" data-val-required="Lütfen rolü seçiniz" aria-required="true" aria-invalid="false">
                                        <option>Lütfen Rolü Seçiniz..</option>

                                    </select>


                                    <span class="text-danger" asp-validation-for="Role"></span>
                                </div>



                                <div>
                                    <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                        <i class="fa fa-plus fa-lg"></i>&nbsp;
                                        <span id="payment-button-amount">Kullanıcı Güncelle</span>
                                        <span id="payment-button-sending" style="display:none;">Güncelleniyor..</span>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div> <!-- .card -->

        </div><!--/.col-->



    </div>


</div><!-- .animated -->
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


