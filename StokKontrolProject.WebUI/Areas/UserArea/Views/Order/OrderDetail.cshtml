
@{
    ViewData["Title"] = "OrderDetail";
}

<h1>OrderDetail</h1>

@model List<OrderDetail>

<div class="animated fadeIn">
    <div class="row">

        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">Data Table</strong>
                </div>
                <div class="card-body">
                    <table id="bootstrap-data-table" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Sipariş Tarihi</th>
                                <th>Ürün</th>
                                <th>Birim tutar</th>
                                <th>Miktar</th>
                                <th>Toplam Tutar</th>
                                <th>Sipariş Durumu</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (OrderDetail item in Model)
                            {
                                
                                    <tr>
                                        <td>@item.AddedDate</td>
                                        <td>@item.Product.ProductName</td>
                                        <td>@item.UnitPrice</td>
                                        <td>@item.Quantity</td>
                                        <td>
                                            @{
                                                decimal toplamTutar = 0;
                                                foreach (OrderDetail detay in Model)
                                                {
                                                    toplamTutar += (detay.Quantity + detay.UnitPrice);
                                                }
                                                <span>@toplamTutar.ToString() ₺</span>
                                            }

                                        </td>

                                        

                                    </tr>
                                }
                                

                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>
</div><!-- .animated -->
@section Css{
    <link rel="stylesheet" href="~/template/assets/css/lib/datatable/dataTables.bootstrap.min.css">
}

@section Scripts{
    <script src="~/template/assets/js/lib/data-table/datatables.min.js"></script>
    <script src="~/template/assets/js/lib/data-table/dataTables.bootstrap.min.js"></script>
    <script src="~/template/assets/js/lib/data-table/dataTables.buttons.min.js"></script>
    <script src="~/template/assets/js/init/datatables-init.js"></script>


    <script type="text/javascript">
        $(document).ready(function () {
            $('#bootstrap-data-table-export').DataTable();
        });
    </script>
    }
